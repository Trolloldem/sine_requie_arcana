<!DOCTYPE html>
<html>
<head>
	<title>Sine Requie Tarot</title>
	<link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/cards.css">
        <script src="/js/cards.js" deref></script> 
</head>
<body>
        {{#each states}}
        <div class="container">
                <div class="card mt-3" id="player_{{this.name}}">
                  <h3 class="card-header">{{this.name}}</h3>
                  <div class="card-body">
                        <div class="row">
                                <div class="col-sm text-center" id="cover_{{this.name}}">
                                        <img src="/arcana/cover.jpg" class="cards">
                                </div>
                                <div class="col-sm text-center" id="card_{{this.name}}">
                                        {{#if this.last_drawn}}
                                        <img src="/arcana/{{this.last_drawn}}.jpg" class="cards" id="arcana_{{this.name}}">
                                        {{/if}}
                                </div>
                        </div>
                  </div>
                  {{#if (eq @index 0)}}
                  <div class="card-body" id="player_name_{{this.name}}">
                    <div class="row">
                        <div class="col-sm text-center">    
                                <button type="button" onclick="get_card(`{{this.name}}`)" class="btn btn-success">Pick a card</a>
                        </div>
                        <div class="col-sm text-center">
                                <button type="button" onclick="shuffle_deck(`{{this.name}}`)" class="btn btn-success">Shuffle deck</a>
                        </div>
                    </div>
                  </div>
                  {{/if}}
                </div>
        </div>
        {{/each}}
</body>
</html>
